    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow_bottom"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow_top"/>
    <LinearLayout
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/option_click1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingVertical="10dp"
                android:layout_marginLeft="10dp"
                android:text="일반 녹화 설정"
                android:textStyle="bold"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/ar_up1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/arrow_up"
                android:backgroundTint="#666666"
                android:gravity="center"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/ar_down1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/arrow_down"
                android:backgroundTint="#666666"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/option_visible1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <EditText
                        android:gravity="center"
                        android:inputType="number"
                        android:id="@+id/video_time"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:hint="sec"
                        android:maxLines="1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="초 녹화"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="#888888"/>
                </LinearLayout>
                <TextView
                    android:background="@drawable/save_24"
                    android:id="@+id/save_video"
                    android:layout_margin="10dp"
                    android:backgroundTint="#666666"
                    android:gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/save_video_check"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text="기본 설정값입니다."
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#cccccc"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow_bottom"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow_top"/>
        <LinearLayout
            android:id="@+id/option_click2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:paddingVertical="10dp"
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="자동 녹화 설정"
                android:textStyle="bold"
                android:textColor="#666666"/>
            <TextView
                android:id="@+id/ar_up2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/arrow_up"
                android:backgroundTint="#666666"
                android:gravity="center"/>
            <TextView
                android:id="@+id/ar_down2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/arrow_down"
