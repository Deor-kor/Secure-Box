            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Secure box 앱 설정"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_gravity="center" />
        <TextView
            android:background="@drawable/option_ref"
            android:backgroundTint="#555555"
            android:id="@+id/option_ref"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow_bottom"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">
            <TextView
                android:textColor="#666666"
                android:gravity="left"
                android:paddingVertical="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="IP   : "
                android:textStyle="bold" />
            <EditText
                android:id="@+id/ip"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:hint="192.168.123.112:8080"
                android:maxLines="1"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:background="@drawable/save_24"
                android:backgroundTint="#666666"
                android:id="@+id/save_ip"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/save_ip_check"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:text=""
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#cccccc"/>
        </LinearLayout>
