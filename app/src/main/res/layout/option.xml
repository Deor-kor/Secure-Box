<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Option">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp">
        <TextView
            android:background="@drawable/arrow_back"
            android:backgroundTint="#333333"
            android:id="@+id/option_back"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:text="Secure box 앱 설정"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow_bottom"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">
        <TextView
            android:textColor="@color/black"
            android:gravity="left"
            android:paddingVertical="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="IP   : "
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/ip"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:hint="192.168.123.112:8080"
            android:maxLines="1"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="@drawable/save_24"
            android:backgroundTint="#494949"
            android:id="@+id/save_ip"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/shadow_bottom"/>

    <LinearLayout
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/option_click1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingVertical="10dp"
                android:layout_marginLeft="10dp"
                android:text="일반 녹화 설정"
                android:textStyle="bold"
                android:textColor="#333333" />
            <TextView
                android:id="@+id/ar_up1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/arrow_up"
                android:gravity="center"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/ar_down1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/arrow_down"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/option_visible1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:gravity="center"
                    android:inputType="number"
                    android:id="@+id/video_time"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:hint="sec"
                    android:maxLines="1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="초 녹화"/>

            </LinearLayout>

            <TextView
                android:background="@drawable/save_24"
                android:id="@+id/save_video"
                android:layout_margin="10dp"
                android:backgroundTint="#888888"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow_bottom"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/option_click2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:paddingVertical="10dp"
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="자동 녹화 설정"
                android:textStyle="bold"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/ar_up2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/arrow_up"
                android:gravity="center"/>
            <TextView
                android:id="@+id/ar_down2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/arrow_down"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_visible2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <EditText
                    android:gravity="center"
                    android:inputType="number"
                    android:id="@+id/auto_time"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:hint="sec"
                    android:maxLines="1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="초씩"/>

                <EditText
                    android:gravity="center"
                    android:inputType="number"
                    android:id="@+id/auto_count"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:hint="횟수"
                    android:maxLines="1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="번 녹화"/>

        </LinearLayout>

            <TextView
                android:background="@drawable/save_24"
                android:id="@+id/save_auto"
                android:layout_margin="10dp"
                android:backgroundTint="#888888"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow_bottom"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/option_click3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:paddingVertical="10dp"
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="동작 감지 녹화 설정"
                android:textStyle="bold"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/ar_up3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/arrow_up"
                android:gravity="center"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/ar_down3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/arrow_down"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/option_visible3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <EditText
                    android:gravity="center"
                    android:inputType="number"
                    android:id="@+id/motion_time"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:hint="sec"
                    android:maxLines="1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="초씩"/>
                <EditText
                    android:gravity="center"
                    android:inputType="number"
                    android:id="@+id/motion_count"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#666666"
                    android:hint="횟수"
                    android:maxLines="1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="번 녹화"/>
            </LinearLayout>

            <TextView
                android:background="@drawable/save_24"
                android:id="@+id/save_motion"
                android:layout_margin="10dp"
                android:backgroundTint="#888888"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/shadow_bottom"/>
    </LinearLayout>




</LinearLayout>